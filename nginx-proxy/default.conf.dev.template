
upstream client {
  server client:3000;
}

upstream server-api {
  server server-api:8080;
}

server {
  listen 80;

  proxy_set_header Host $host;
  proxy_set_header X-Real-IP $remote_addr;

  location / {
    proxy_pass http://client;
  }

  location /api {
    proxy_pass http://server-api;
  }

  location /public {
    proxy_pass http://server-api;
  }
}
